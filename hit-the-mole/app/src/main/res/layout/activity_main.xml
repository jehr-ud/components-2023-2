<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_start_game"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            />

        <Button
            android:id="@+id/btnMainPlayLevel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_game_level1" />

        <Button
            android:id="@+id/btnMainPlayLevel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_game_level2" />

        <Button
            android:id="@+id/btnMainPlayLevel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_game_level3" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>